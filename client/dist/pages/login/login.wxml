<view class="login-container">
  <view class="thumb">
    <image src="/images/gougou.jpeg"/>
  </view>
  <view class="login-content">
    <view class="username">
      <!-- <view class="username-text">用户名</view> -->
      <input type="text" class="input" placeholder="请输入用户名" bindblur="usernameBlur"/>
    </view>
    <view class="password">
      <!-- <view class="password-text">密码</view> -->
      <input type="text" class="input" placeholder="请输入密码" bindblur="passwordBlur" password="true"/>
    </view>
    <button bindtap="login" type="primary">登录</button>
  </view>
</view>
